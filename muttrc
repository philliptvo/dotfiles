# Folder hooks
folder-hook '~/Mail/philliptvo/*' 'source "gpg -dq $HOME/.mutt/account.com.gmail.phillip.t.vo.gpg |"'
folder-hook '~/Mail/ptgvo/*' 'source "gpg -dq $HOME/.mutt/account.com.uwaterloo.ptgvo.gpg |"'

# Default account
source "gpg -dq $HOME/.mutt/account.com.gmail.phillip.t.vo.gpg |"

bind index,pager i noop
bind index,pager g noop
bind index \Cf noop

source ~/.mutt/colorscheme
source ~/.mutt/keybindings

# Macros for switching accounts
macro index <F1> '<sync-mailbox><enter-command>source "gpg -dq $HOME/.mutt/account.com.gmail.phillip.t.vo.gpg |"<enter><change-folder>!<enter>'
macro index <F2> '<sync-mailbox><enter-command>source "gpg -dq $HOME/.mutt/account.com.uwaterloo.ptgvo.gpg |"<enter><change-folder>!<enter>'

# Set default text editor
set editor = "vim"

#-------- Basic Config {{{
#------------------------------------------------------
set ssl_starttls = yes
set ssl_force_tls = yes
set imap_check_subscribed
# set hostname = gmail.com
set mbox_type = Maildir
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
# set record = "+[GMail]/Sent Mail"
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set smart_wrap

set mailcap_path = ~/.mutt/mailcap
set signature= ~/.mutt/signature

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
auto_view text/html
alternative_order text/plain text/enriched text/html
# }}}

# View attachments properly.
set fast_reply           # skip to compose when replying
set fcc_attach           # save attachments with the body
unset mime_forward       # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set forward_quote                    # include message in forwards
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies

# Sidebar settings
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_short_path = yes
set sidebar_next_new_wrap = yes
set mail_check_stats
set sidebar_format = '%B%?F? [%F]?%* %?N?%N/? %?S?%S?'

# vim: filetype=neomuttrc
