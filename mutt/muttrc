# Folder hooks
folder-hook 'account.com.gmail.philliptvo' 'source ~/.mail/account.com.gmail.philliptvo'

# Default account
source ~/.mail/account.com.gmail.philliptvo

bind index,pager i noop
bind index,pager g noop
bind index \Cf noop

source ~/.mutt/.colorscheme
source ~/.mutt/.keybindings
source ~/.mutt/.mailcap

# Macros for switching accounts

macro index <F12> '<sync-mailbox><enter-command>source ~/.mail/account.com.gmail.phillip<enter><change-folder>!<enter>'

# Set default text editor
set editor = "vim"

#-------- Basic Config {{{
#------------------------------------------------------
set ssl_starttls = yes
set ssl_force_tls = yes
set imap_check_subscribed
# set hostname = gmail.com
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
# set record = "+[GMail]/Sent Mail"
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set smart_wrap
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
# }}}

# General remappings
bind editor <space> noop
bind index G last-entry
bind index gg first-entry
bind pager j next-line
bind pager k previous-line

bind pager,browser gg top-page
bind pager,browser G bottom-page
bind index,browser d half-down
bind index,browser u half-up
bind index D delete-message
bind index U undelete-message
bind index,browser F search

macro index,pager S <sync-mailbox>

# View attachments properly.
bind attach <return> view-mailcap
set fast_reply           # skip to compose when replying
set fcc_attach           # save attachments with the body
unset mime_forward       # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set forward_quote                    # include message in forwards
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies

# Sidebar mappings
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_short_path = yes
set sidebar_next_new_wrap = yes
set mail_check_stats
set sidebar_format = '%B%?F? [%F]?%* %?N?%N/? %?S?%S?'
bind index,pager ] sidebar-next
bind index,pager [ sidebar-prev
bind index,pager > sidebar-open
bind generic ] noop
bind generic [ noop
bind index,pager B sidebar-toggle-visible

# vim: filetype=neomuttrc
